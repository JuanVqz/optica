.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.fa.fa-list
      Lista de corporaciones
    .block-options
      .block-options-item
        = link_to [:new, :corporacion], class: 'btn btn-alt-secondary' do
          %i.fa.fa-plus
          registrar corporaciÃ³n
  .block-content
    .table-responsive
      %table.table.table-striped.table-hover.table-sm.table-vcenter
        %thead
          %tr
            %th nombre
            %th telefono
            %th rfc
            %th.text-center{:style => "width: 100px;"} Acciones
        %tbody
          - @corporaciones.each do |corporacion|
            %tr
              %td= corporacion.nombre
              %td= corporacion.telefono
              %td= corporacion.rfc
              %td
                .btn-group
                  = link_to corporacion, class: 'btn btn-alt-info' do
                    %i.si.si-eye
                    detalles
                  = link_to [:edit, corporacion], class: 'btn btn-alt-warning' do
                    %i.si.si-pencil
                    editar
