= simple_form_for usuario do |f|
  .row
    .col-md-4
      = f.input :nombre
    .col-md-4
      = f.input :telefono
    .col-md-4
      = f.input :email
    .col-md-4
      = f.input :password
    .col-md-4
      = f.input :password_confirmation
    .col-md-4.text-center
      = label_tag '¿permitir acceso al sistema?'
      = f.input :activo
    .col-md-4.text-center
      = label_tag '¿permitir notificaciones?'
      = f.input :notificar
    .block-content.block-content-full.block-content-sm.bg-body-light.font-size-sm
      = link_to :back, class: 'btn btn-alt-secondary' do
        %i.fa.fa-arrow-left
        regresar
      = f.submit class: 'btn btn-alt-success pull-right'
