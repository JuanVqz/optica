.table-responsive
  %table.table.table-striped.table-hover.table-sm.table-vcenter
    %thead
      %tr
        %th nombre
        %th email
        %th notificar
        %th cargo
        %th.text-center{:style => "width: 100px;"} Acciones
    %tbody
      - usuarios.each do |usuario|
        %tr
          %td= usuario.nombre
          %td= usuario.email
          %td= permitir_notificar usuario
          %td= usuario.cargo
          %td
            .btn-group
              = link_to usuario, class: 'btn btn-alt-info' do
                %i.si.si-eye
                detalles
              = link_to [:edit, usuario], class: 'btn btn-alt-warning' do
                %i.si.si-pencil
                editar
    %tfoot
      %tr
        %td{ colspan: 6 }
          .row
            .col-6
              = paginate usuarios
            .col-6
              .pull-right
                = page_entries_info usuarios
