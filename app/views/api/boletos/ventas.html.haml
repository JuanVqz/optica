.fila
  .col50.texto-izq= @venta.codigo
  .col50.texto-der= l @venta.created_at, format: :short
  .col30.texto-izq= @venta.usuario
  .col70.texto-der= @venta.cliente

.espacio-arriba.espacio-abajo
  .texto-centro TICKET DE VENTA

%table
  %thead
    %th c√≥digo
    %th cantidad
    %th descuento
    %th precio
  %tbody
    - @venta.vendidos.each do |vendido|
      %tr
        %td= vendido
        %td.texto-centro= vendido.cantidad
        %td.texto-der= number_to_currency vendido.descuento
        %td.texto-der= number_to_currency vendido.precio_venta
  %tfoot.texto-izq
    %tr
      %th{ colspan: 2 }
      %th subtotal
      %th.texto-der= number_to_currency @venta.suma_precios_venta
    %tr
      %th{ colspan: 2 }
      %th descuento
      %th.texto-der= number_to_currency @venta.suma_descuentos
    %tr
      %th{ colspan: 2 }
      %th total
      %th.texto-der= number_to_currency @venta.total
    %tr
      %th{ colspan: 2 }
      %th anticipo
      %th.texto-der= number_to_currency @venta.suma_anticipos
    %tr
      %th{ colspan: 2 }
      %th deuda
      %th.texto-der= number_to_currency @venta.deuda

.fila.texto-mayuscula
  = total_en_letras @venta

.fila
  .col50= codigo_de_barras(@venta)
  .col50
    fecha de entrega
    %br= l @venta.fecha_entrega, format: :fecha

