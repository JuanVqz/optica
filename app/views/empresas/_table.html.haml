.table-responsive
  %table.table.table-striped.table-hover.table-sm.table-vcenter
    %thead
      %tr
        %th nombre
        %th telefono
        %th rfc
        %th.text-center{:style => "width: 100px;"} Acciones
    %tbody
      - empresas.each do |empresa|
        %tr
          %td= empresa.nombre
          %td= empresa.telefono
          %td= empresa.rfc
          %td
            .btn-group
              = link_to empresa, class: 'btn btn-alt-info' do
                %i.si.si-eye
                detalles
              = link_to [:edit, empresa], class: 'btn btn-alt-warning' do
                %i.si.si-pencil
                editar
    %tfoot
      %tr
        %td{ colspan: 7 }
          .row
            .col-6
              = paginate empresas
            .col-6
              .pull-right
                = page_entries_info empresas
