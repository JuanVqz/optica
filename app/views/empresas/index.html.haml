.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.fa.fa-building
      Empresa
    .block-options
      .block-options-item
        = link_to [:new, :empresa], class: 'btn btn-alt-secondary' do
          %i.fa.fa-plus
          registrar empresa
  .block-content
    .table-responsive
      %table.table.table-striped.table-hover.table-sm.table-vcenter
        %thead
          %tr
            %th nombre
            %th telefono
            %th rfc
            %th.text-center{:style => "width: 100px;"} Acciones
        %tbody
          - @empresas.each do |empresa|
            %tr
              %td= empresa.nombre
              %td= empresa.telefono
              %td= empresa.rfc
              %td
                .btn-group
                  = link_to empresa, class: 'btn btn-alt-info' do
                    %i.si.si-eye
                    detalles
                  = link_to [:edit, empresa], class: 'btn btn-alt-warning' do
                    %i.si.si-pencil
                    editar
