/ Sidebar
%nav#sidebar
  / Sidebar Scroll Container
  #sidebar-scroll
    / Sidebar Content
    .sidebar-content
      / Side Header
      .content-header.content-header-fullrow.px-15.bg-black-op-10
        / Mini Mode
        .content-header-section.sidebar-mini-visible-b
          / Logo
          %span.content-header-item.font-w700.font-size-xl.float-left.animated.fadeIn
            %span.text-dual-primary-dark j
            %span.text-primary &amp;j
          / END Logo
        / END Mini Mode
        / Normal Mode
        .content-header-section.text-center.align-parent.sidebar-mini-hidden
          / Close Sidebar, Visible only on mobile screens
          / Layout API, functionality initialized in Codebase() -> uiApiLayout()
          %button.btn.btn-circle.btn-dual-secondary.d-lg-none.align-v-r{"data-action" => "sidebar_close", "data-toggle" => "layout", :type => "button"}
            %i.fa.fa-times.text-danger
          / END Close Sidebar
          / Logo
          .content-header-item
            = link_to root_path, class: 'link-effect font-w700' do
              %span.font-size-xl.text-dual-primary-dark Optica
              %span.font-size-xl.text-primary J&amp;J
          / END Logo
        / END Normal Mode
      / END Side Header
