.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.fa.fa-adjust
      Lista de armazones
    .block-options
      .block-options-item
        = render 'shared/buscador', recursos_ruta: armazones_path
      .block-options-item
        = link_to [:new, :armazon], class: 'btn btn-alt-secondary' do
          %i.fa.fa-plus
          registrar armazon
  .block-content
    = render 'productos/table', productos: @armazones
