.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.si.si-eye
      detalles de la tienda #{@tienda}
    .block-options
      .block-options-item
  .block-content
  = render 'empresas/empresa', empresa: @tienda

  .block-content.block-content-full.block-content-sm.bg-body-light.font-size-sm
    = link_to [:tiendas], class: 'btn btn-alt-secondary' do
      %i.si.si-arrow-left
      regresar
    = link_to [:edit, @tienda], class: 'btn btn-alt-warning pull-right' do
      %i.si.si-pencil
      editar
