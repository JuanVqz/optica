.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.fa.fa-users
      Lista de clientes
    .block-options
      .block-options-item
        = render 'shared/buscador', recursos_ruta: clientes_path
      .block-options-item
        = link_to [:new, :cliente], class: 'btn btn-alt-secondary' do
          %i.fa.fa-plus
          registrar cliente
  .block-content
    .table-responsive
      %table.table.table-striped.table-hover.table-sm.table-vcenter
        %thead
          %tr
            %th nombre
            %th rfc
            %th telefono
            %th.text-center{:style => "width: 100px;"} Acciones
        %tbody
          - @clientes.each do |cliente|
            %tr
              %td= cliente.nombre
              %td= cliente.rfc
              %td= cliente.telefono
              %td
                .btn-group
                  = link_to cliente, class: 'btn btn-alt-info' do
                    %i.si.si-eye
                    detalles
                  - if puede?(:edit, :cliente)
                    = link_to [:edit, cliente], class: 'btn btn-alt-warning' do
                      %i.si.si-pencil
                      editar
    %tfoot
      %tr
        %td{ colspan: 6 }
          .row
            .col-6
              = paginate @clientes
            .col-6
              .pull-right
                = page_entries_info @clientes
