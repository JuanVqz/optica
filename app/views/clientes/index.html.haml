.block.block-themed
  .block-header.bg-primary-dark
    %h3.block-title
      %i.fa.fa-users
      Lista de clientes
    .block-options
  .block-content
    .table-responsive
      %table.table.table-striped.table-hover.table-sm.table-vcenter
        %thead
          %tr
            %th nombre
            %th rfc
            %th telefono
            %th.text-center{:style => "width: 100px;"} Acciones
        %tbody
          - @clientes.each do |cliente|
            %tr
              %td= cliente.nombre
              %td= cliente.rfc
              %td= cliente.telefono
              %td
                .btn-group
                  = link_to cliente, class: 'btn btn-alt-info' do
                    %i.si.si-eye
                    detalles
