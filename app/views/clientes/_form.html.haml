-# frozen_string_literal: true
= simple_form_for(@cliente) do |f|
  .row
    .col-md-3
      = f.input :nombre
    .col-md-3
      = f.input :telefono
    .col-md-3
      = f.input :rfc
    .col-md-3
      = f.input :corporacion_id, collection: opciones_de_corporaciones
    .col-md-12
      %h4 registrar domicilio
      = render 'domicilios/domicilio_fields', f: f

    .block-content.block-content-full.block-content-sm.bg-body-light.font-size-sm
      = f.submit class: 'btn btn-alt-primary'
