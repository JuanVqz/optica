<h1>Ventas</h1>

<table>
  <thead>
    <tr>
      <th>Folio</th>
      <th>Observaciones</th>
      <th>Saldada</th>
      <th>Fecha entrega</th>
      <th>Descuento</th>
      <th>Total</th>
      <th>Cliente</th>
      <th>Usuario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ventas.each do |venta| %>
      <tr>
        <td><%= venta.folio %></td>
        <td><%= venta.observaciones %></td>
        <td><%= venta.saldada %></td>
        <td><%= venta.fecha_entrega %></td>
        <td><%= venta.descuento %></td>
        <td><%= venta.total %></td>
        <td><%= venta.cliente %></td>
        <td><%= venta.usuario %></td>
        <td><%= link_to 'Show', venta %></td>
        <td><%= link_to 'Edit', edit_venta_path(venta) %></td>
        <td><%= link_to 'Destroy', venta, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Venta', new_venta_path %>
